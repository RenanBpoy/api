generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Component {
  id          String   @id @default(uuid())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  readings    Reading[]
  alerts      Alert[]

  @@map("components")
}

model Reading {
  id          String   @id @default(uuid())
  componentId String
  data        Json
  recordedAt  DateTime @default(now())

  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)

  @@index([componentId])
  @@map("readings")
}

model Alert {
  id          String   @id @default(uuid())
  componentId String
  condition   String?
  message     String
  resolvedAt  DateTime?
  createdAt   DateTime @default(now())

  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)

  @@index([componentId])
  @@map("alerts")
}
